{
    "name": "playcanvas",
    "displayName": "PlayCanvas",
    "version": "1.3.1",
    "description": "PlayCanvas Editor VS Code Extension",
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/playcanvas/vscode-extension.git"
    },
    "license": "MIT",
    "publisher": "PlayCanvas",
    "type": "commonjs",
    "main": "./out/extension.js",
    "browser": "./out/browser.js",
    "scripts": {
        "build": "node ./scripts/build.mjs",
        "compile": "tsc -p .",
        "compile:plugin": "tsc -p ./plugin && node ./scripts/playcanvas-dts.mjs",
        "compile:web": "rollup -c",
        "lint": "prettier --check . && eslint .",
        "lint:fix": "prettier --write . && eslint --fix .",
        "pretest": "tsc -p tsconfig.test.json && node ./scripts/vscode-storage.mjs",
        "test": "vscode-test",
        "test:web": "vscode-test-web --extensionDevelopmentPath=.",
        "watch": "tsc -watch -p ./",
        "watch:plugin": "tsc -watch -p ./plugin && node ./scripts/playcanvas-dts.mjs",
        "watch:web": "rollup -c -w"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PlayCanvas",
            "properties": {
                "playcanvas.rootDir": {
                    "type": "string",
                    "default": "",
                    "description": "Specify the root directory for PlayCanvas projects (non-web extension only). Leave empty to use the default directory."
                }
            }
        },
        "commands": [
            {
                "command": "playcanvas.login",
                "title": "PlayCanvas: Login"
            },
            {
                "command": "playcanvas.openProject",
                "title": "PlayCanvas: Open Project"
            },
            {
                "command": "playcanvas.reloadProject",
                "title": "PlayCanvas: Reload Project"
            },
            {
                "command": "playcanvas.switchBranch",
                "title": "PlayCanvas: Switch Branch"
            }
        ],
        "typescriptServerPlugins": [
            {
                "name": "playcanvas-plugin",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "collab-view",
                    "name": "Collaborators",
                    "icon": "organization",
                    "when": "resourceDirname =~ /playcanvas/"
                }
            ]
        }
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "dependencies": {
        "ignore": "^7.0.5",
        "isomorphic-ws": "^5.0.0",
        "ot-text": "github:playcanvas/ot-text",
        "playcanvas-plugin": "file:plugin",
        "sharedb": "3.2.1",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-replace": "^6.0.3",
        "@rollup/plugin-swc": "^0.4.0",
        "@types/express": "^5.0.6",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/sharedb": "3.2.1",
        "@types/sinon": "^21.0.0",
        "@types/vscode": "^1.98.0",
        "@types/ws": "^8.18.1",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/test-web": "^0.0.77",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-package-json": "^0.88.0",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^17.0.0",
        "jsonc-eslint-parser": "^2.4.2",
        "playcanvas": "2.14.4",
        "prettier": "^3.7.4",
        "rollup": "^4.55.1",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "sinon": "^21.0.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0"
    },
    "engines": {
        "vscode": "^1.98.0"
    },
    "icon": "resources/logo.png"
}
